;; Tricking the system
;; UGLY UGLY UGLY
(setq rmail-remote-password
      (let ((auth-info (car (auth-source-search ; I DO NOT LIKE THAT (that should be simpler)
                             :host "mail.galae.net" ; DO NOT EXPOSE THIS PLEASE
                             :max 1))))
        (when auth-info
          (let ((secret (plist-get auth-info :secret)))
            (if (functionp secret)
                (funcall secret)
              secret)))))
